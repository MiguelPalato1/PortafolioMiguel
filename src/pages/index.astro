---
import Layout from "../layouts/Layout.astro";
import "../styles/Estilos.scss";
---

<head>
    <link
		rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
	  />
</head>

<Layout title="PalatoPage">
    <main class="bg-white bg-opacity-10">
      <section> 
        <div class="video-container ">
              <video src="/public/LogoAnimacion.mp4" autoplay loop muted poster=""></video>
       
        <div class="">
          <h3 class="position-absolute bottom-0 end-0 m-1 p-5">Graphic Designer / Web designer </h3>
        </div>
        </div>
        </section> 
      
     
        <section>   
            <div class="container-fluid text-dark bg-white margen" style="height:auto">
                <div class="row">
                    <div class="col-lg-7 col-xs-12 example"> 
                        <h1 class="display-1 text-center p-3 mt-5 animate_animated animate__fadeInLeft">
                            About me
                        </h1>
                        <h4 class="text-muted text-center p-1 ">
                            I love desing and creating new things.
                        </h4>
                        <h6 class="text-center lh-base p-5 mb-5 lead">I am a mexican designer, graduated from the University of
                            Guanajuato. I really like to play with desing but at the same time take into account the principles
                            and rules that exist in this. I like to invest my time in myself, in my physical and mental health.
                            I like to be prepared for any challenge that comes to me.
                        </h6>

                    </div>
                    <div class="col-lg-5 col-xs-12 p-2"> 
                    <img class="rounded-circle pt-3 mt-3 img-fluid" src="/public/YONI.JPG" width="100%">
                    </div>
                </div>
            </div>
          
        </section>
        <section class= "container-fluid p-0 bg-white ">
            <div class= "row p-2 mt-2">
                <div class="col-12 margen">
                    <h2 class="display-1 text-end mx-5 px-5">
                         Projects
                    </h2>
                </div>
            </div>
        </section>

        <!-- Galeria -->

        <section class="p-5 m-3">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/public/EmporyHdGalery_1.png" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block shadow-lg p-3 mb-5 bg-body rounded">
                  <h5>Empory</h5>
                  <p class="text-dark">Branding for high-end product companies</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/public/saborMexicanoGalery.png" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block shadow-lg p-3 mb-5 bg-body rounded">
                  <h5>Sabor Mexicano</h5>
                  <p class="text-dark">Branding desing for Mexican food restaurant</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/public/EvexiaGalery.png" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block shadow-lg p-3 mb-5 bg-body rounded">
                  <h5>Evexia Spa</h5>
                  <p class="text-dark">Spa Branding desing in Irapuato</p>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Siguiente</span>
            </button>
          </div>
        </section> 
        <section class= "container-fluid p-0 bg-white ">
          <div class= "row p-5 mt-5">
              <div class="col-12 margen">
                  <h2 class="display-2 text-center ">
                    Dowloadable
                  </h2>
                  <a type="button" class="btn btn-dark boton" href="/Iconos.ai.zip" role="button">Icons</a>
                    <hr class="px-5"/>
              </div>
          </div>
      </section>
    </main>
   
</Layout>

<style>
  .margen{
    padding-left: 15%;
    padding-right: 3%;
  }

    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@800&display=swap');
   
    .h1{
        font-family: 'Poppins', sans-serif;
        font-weight: 800;
    }
    .h5, .h4, .h3{
        color: black;
        font-weight: 600;
       
       
    }
    .display-1{
        font-weight: 800;
    }
 
    .display-2{
        font-weight: 600;
    }

    .display-3, .display-5{
        font-weight: 400;
    }

    .display-4{
      font-weight: 400;
    }

    .boton{
        justify-content: center;
        align-items: center;
        margin-left: 50vh;
    }
    
    p{
      font-family: 'Poppins', sans-serif;
    }
    
</style>
